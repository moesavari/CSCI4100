<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="1"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:id="@+id/id_textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Smith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_name_view"
        android:layout_below="@+id/id_textView"
        android:layout_alignLeft="@+id/id_textView"
        android:layout_alignStart="@+id/id_textView" />

    <TextView
        android:text="Bob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/first_name_view"
        android:layout_alignBaseline="@+id/last_name_view"
        android:layout_alignBottom="@+id/last_name_view"
        android:layout_alignRight="@+id/phone_view"
        android:layout_alignEnd="@+id/phone_view"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp" />

    <TextView
        android:text="909-121-3241"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone_view"
        android:layout_below="@+id/first_name_view"
        android:layout_alignLeft="@+id/last_name_view"
        android:layout_alignStart="@+id/last_name_view" />
</LinearLayout>